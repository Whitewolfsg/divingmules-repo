<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.jtv.archives"
       name="Jtv"
       version="0.3.8"
       provider-name="divingmule">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.common.plugin.cache" version="1.0.0"/>
    <import addon="script.module.simplejson" optional="true" />
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="script.ircchat" version="1.0.0"  optional="true" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Justin.tv</summary>
    <description>Watch live and archived videos from justin.tv</description>
    <platform>all</platform>
    <language></language>
  </extension>
</addon>